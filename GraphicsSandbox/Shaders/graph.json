{
  "name": "gltf_graph",
  "passes": [
    {
      "name": "drawcull_pass",
      "type": "compute",
      "enabled": true,
      "outputs": [
        {
          "type": "buffer",
          "name": "indirect_draw_list"
        }
      ]
    },
    {
      "inputs": [
        {
          "type": "attachment",
          "name": "depth"
        },
        {
          "type": "buffer",
          "name": "indirect_draw_list"
        }
      ],
      "name": "gbuffer_pass",
      "outputs": [
        {
          "type": "attachment",
          "name": "gbuffer_colour",
          "format": "B8G8R8A8_UNORM",
          "resolution": [ 1920, 1080 ],
          "op": "VK_ATTACHMENT_LOAD_OP_CLEAR"
        },
        {
          "type": "attachment",
          "name": "gbuffer_normals",
          "format": "R16G16B16A16_SFLOAT",
          "resolution": [ 1920, 1080 ],
          "op": "VK_ATTACHMENT_LOAD_OP_CLEAR"
        },
        {
          "type": "attachment",
          "name": "gbuffer_metallic_roughness_occlusion",
          "format": "B8G8R8A8_UNORM",
          "resolution": [ 1920, 1080 ],
          "op": "VK_ATTACHMENT_LOAD_OP_CLEAR"
        },
        {
          "type": "attachment",
          "name": "gbuffer_position",
          "format": "R16G16B16A16_SFLOAT",
          "resolution": [ 1920, 1080 ],
          "op": "VK_ATTACHMENT_LOAD_OP_CLEAR"
        },
        {
          "type": "attachment",
          "name": "gbuffer_emissive",
          "format": "B8G8R8A8_UNORM",
          "resolution": [ 1920, 1080 ],
          "op": "VK_ATTACHMENT_LOAD_OP_CLEAR"
        }
      ]
    },
    {
      "inputs": [
        {
          "type": "buffer",
          "name": "indirect_draw_list"
        }
      ],
      "name": "depth_pre_pass",
      "outputs": [
        {
          "type": "attachment",
          "name": "depth",
          "format": "D32_SFLOAT",
          "resolution": [ 1920, 1080 ],
          "op": "VK_ATTACHMENT_LOAD_OP_CLEAR"
        }
      ]
    },
    {
      "name": "cascaded_shadow_pass",
      "outputs": [
        {
          "type": "attachment",
          "name": "csm_depth",
          "format": "D32_SFLOAT",
          "layers": 5,
          "resolution": [ 2048, 2048 ],
          "op": "VK_ATTACHMENT_LOAD_OP_CLEAR"
        },
        {
          "type": "buffer",
          "name": "cascade_info_buffer"
        }
      ]
    },
    {
      "inputs": [
        {
          "type": "texture",
          "name": "gbuffer_colour"
        },
        {
          "type": "texture",
          "name": "gbuffer_normals"
        },
        {
          "type": "texture",
          "name": "gbuffer_metallic_roughness_occlusion"
        },
        {
          "type": "texture",
          "name": "gbuffer_position"
        },
        {
          "type": "texture",
          "name": "csm_depth"
        },
        {
          "type": "buffer",
          "name": "cascade_info_buffer"
        }
      ],
      "name": "lighting_pass",
      "outputs": [
        {
          "type": "attachment",
          "name": "lighting",
          "format": "B8G8R8A8_UNORM",
          "resolution": [ 1920, 1080 ],
          "op": "VK_ATTACHMENT_LOAD_OP_CLEAR"
        }
      ]
    },
    {
      "inputs": [
        {
          "type": "texture",
          "name": "gbuffer_normals"
        },
        {
          "type": "texture",
          "name": "depth"
        }
      ],
      "name": "ssao_pass",
      "outputs": [
        {
          "type": "attachment",
          "name": "ssao",
          "format": "R16_SFLOAT",
          "resolution": [ 960, 540 ],
          "op": "VK_ATTACHMENT_LOAD_OP_CLEAR"
        }
      ]
    },
    {
      "inputs": [
        {
          "type": "attachment",
          "name": "lighting"
        },
        {
          "type": "attachment",
          "name": "depth"
        },
        {
          "type": "buffer",
          "name": "indirect_draw_list"
        },
        {
          "type": "texture",
          "name": "csm_depth"
        },
        {
          "type": "buffer",
          "name": "cascade_info_buffer"
        }
      ],
      "name": "transparent_pass",
      "enabled": true,
      "outputs": [
        {
          "type": "reference",
          "name": "lighting"
        }
      ]
    },
    {
      "inputs": [
        {
          "type": "reference",
          "name": "lighting"
        }
      ],
      "name": "fxaa_pass",
      "enabled": true,
      "outputs": [
        {
          "type": "attachment",
          "name": "final",
          "format": "B8G8R8A8_UNORM",
          "resolution": [ 1920, 1080 ],
          "op": "VK_ATTACHMENT_LOAD_OP_CLEAR"
        }
      ]
    }
  ]
}